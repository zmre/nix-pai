{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000"
  },
  "companyAnnouncements": ["@companyAnnouncements@"],
  "outputStyle": "@outputStyle@",
  "permissions": {
    "additionalDirectories": ["/tmp", "/private/tmp"],
    "disableBypassPermissionsMode": "disable",
    "defaultMode": "@defaultMode@",
    "allow": [
      @permissionsAllow@
      "Skill(:*)",
      "Bash(npm:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(rustc:*)",
      "Bash(fabric:*)",
      "Bash(gemini:*)",
      "Bash(codex:*)",
      "Bash(make:*)",
      "Bash(configure:*)",
      "Bash(build:*)",
      "Bash(jq:*)",
      "Bash(tsc:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(pip:*)",
      "Bash(magick:*)",
      "Bash(uv:*)",
      "Webfetch(*)",
      "Read(./**)",
      "Read(/tmp/**)",
      "Write(./*)",
      "Write(/tmp/**)",
      "Edit(./*)",
      "Edit(/tmp/**)",
      "MultiEdit(./*)",
      "MultiEdit(/tmp/**)",
      "Glob(./*)",
      "Grep(./*)",
      "LS(./*)",
      "WebFetch(domain:*)",
      "WebSearch",
      "NotebookRead(*)",
      "NotebookEdit(./*)",
      "TodoWrite(*)",
      "ExitPlanMode(*)",
      "Task(*)"
    ],
    "ask": [
      @permissionsAsk@
      "mcp__Ref"
    ],
    "deny": [
      @permissionsDeny@
      "Bash(aws:*)",
      "Bash(gcp:*)",
      "Bash(git push:*)",
      "Bash(gcloud:*)",
      "Bash(kubectl:*)",
      "Bash(vault:*)",
      "Bash(sudo:*)",
      "Bash(diskutil:*)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf $HOME)",
      "Bash(rm -rf $PAI_HOME)",
      "Bash(rm -rf $PAI_DIR)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf /*)",
      "Bash(fork bomb)",
      "Bash(dd :*)",
      "Bash(dd if=/dev/zero of=/dev/sda)",
      "Bash(mkfs.ext4:*)",
      "Bash( /dev/sda)",
      "Bash(> /dev/sda)",
      "Read(./.env)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [],
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "@paiBasePath@/claude/hooks/update-tab-titles.ts"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "@paiBasePath@/claude/hooks/load-core-context.ts"
          },
          {
            "type": "command",
            "command": "@paiBasePath@/claude/hooks/initialize-pai-session.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "@paiBasePath@/claude/hooks/stop-hook.ts"
          },
          {
            "type": "command",
            "command": "@paiBasePath@/claude/hooks/capture-all-events.ts --event-type Stop"
          }
        ]
      }
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "bash @paiBasePath@/claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "max_tokens": 4096
}
